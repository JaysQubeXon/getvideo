{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": ["node_modules/"]
    }
  },
  "include": ["src/**/*", "types/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
